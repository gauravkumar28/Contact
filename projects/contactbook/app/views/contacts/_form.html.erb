<%= simple_form_for @contact, class: 'form-horizontal' do |f| %>
  <% if @contact.errors.any? %>
    <ul>
	  <% @contact.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	</ul>
	<% end %>
 <div class="form-groups"> 
  <%= f.input :name, class: 'groups-control' %>
  <%= f.input :phone, class: 'groups-control', length: 10%>
  <%= f.fields_for(@contact.emails) do |email| %>
    <%= email.input  :email_url, required: true , class: 'groups-control'%>
  <% end %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
